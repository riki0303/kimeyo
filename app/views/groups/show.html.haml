%h1.mb-4= @group.name

.d-flex.gap-2.mb-4
  = link_to "一覧に戻る", groups_path, class: "btn btn-secondary"
  = link_to "編集", edit_group_path(@group), class: "btn btn-primary"
  = button_to "削除", group_path(@group), method: :delete, class: "btn btn-danger", data: { turbo_confirm: "本当に削除しますか？" }

.card.mb-4
  .card-header
    %h5.mb-0 グループ詳細
  .card-body
    %p
      %strong グループ名:
      = @group.name
    %p
      %strong 作成者:
      = @group.owner.email
    %p
      %strong メンバー数:
      = @group.members.count

.card
  .card-header
    %h5.mb-0 メンバー一覧
  .card-body
    - if @group.members.any?
      %ul.list-group.list-group-flush
        - @group.members.each do |member|
          %li.list-group-item= member.email
    - else
      %p.text-muted メンバーがいません

