- if @group.errors.any?
  #error_explanation.alert.alert-danger
    %h5 エラーが発生しました
    %ul.mb-0
      - @group.errors.full_messages.each do |message|
        %li= message

= form_with model: @group, local: true, class: "mb-3" do |f|
  .mb-3
    = f.label :name, "グループ名", class: "form-label"
    = f.text_field :name, class: "form-control", placeholder: "グループ名を入力してください"
  
  .d-flex.gap-2
    = f.submit class: "btn btn-primary"
    = link_to "キャンセル", groups_path, class: "btn btn-secondary"

